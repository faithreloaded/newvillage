---
import { getLangFromUrl, type Locale, loadT } from '../../i18n';

const lang: Locale = getLangFromUrl(Astro.url);
const t = await loadT(lang, ['header', 'footer']);
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <div class="footer-logo">
          <img src="/images/logo.svg" alt="Logo" class="footer-logo-img" />
        </div>
        <p class="footer-description">{t('description')}</p>
      </div>
      
      <div class="footer-section">
        <h4 class="footer-subtitle">{t('linksTitle')}</h4>
        <ul class="footer-links">
          <li><a href={`/${lang}`} class="footer-link">{t('nav.home')}</a></li>
          <li><a href={`/${lang}/classes`} class="footer-link">{t('nav.classes')}</a></li>
          <li><a href={`/${lang}/prices`} class="footer-link">{t('nav.prices')}</a></li>
          <li><a href={`/${lang}/booking`} class="footer-link">{t('nav.schedule')}</a></li>
          <li><a href={`/${lang}/contact`} class="footer-link">{t('nav.contact')}</a></li>
        </ul>
      </div>
      
      <div class="footer-section">
        <h4 class="footer-subtitle">{t('contactTitle')}</h4>
        <ul class="footer-links">
          <li class="footer-contact-item">
            <svg class="footer-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            <a href="mailto:info@newvillage.com" class="footer-link">
              info@newvillage.com
            </a>
          </li>
          <li class="footer-contact-item">
            <svg class="footer-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
            <a href="tel:+34912345678" class="footer-link">
              +34 912 345 678
            </a>
          </li>
          <li class="footer-contact-item footer-address">
            <svg class="footer-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            <span class="footer-address-text">
              {t('address')}
              <br />
              {t('addressCity')}
            </span>
          </li>
        </ul>
      </div>
      
      <div class="footer-section">
        <h4 class="footer-subtitle">{t('legalTitle')}</h4>
        <ul class="footer-links">
          <li><a href={`/${lang}/legal`} class="footer-link">{t('legal')}</a></li>
          <li><a href={`/${lang}/privacy`} class="footer-link">{t('privacy')}</a></li>
        </ul>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p class="footer-copyright">
        Copyright Â© {new Date().getFullYear()} New Village. {t('copyright')}
      </p>
      <p class="footer-credit">
        {t('webDesign')}
        <a href="https://bcnwebstudio.net" target="_blank" rel="noopener noreferrer" class="footer-credit-link">
          bcnwebstudio.net
        </a>
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-background-alt);
    border-top: 1px solid var(--color-border);
    margin-top: auto;
  }


  .footer-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    gap: 2rem;
    padding: 3rem 0 2rem;
    align-items: start;
  }

  .footer-logo {
    margin-bottom: 1rem;
  }

  .footer-logo-img {
    height: 2rem;
    width: auto;
  }

  .footer-subtitle {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 1rem 0;
  }

  .footer-description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
    max-width: 300px;
  }

  .footer-links {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-links li {
    margin-bottom: 0.5rem;
  }

  .footer-contact-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .footer-icon {
    width: 18px;
    height: 18px;
    color: var(--color-terracotta);
    flex-shrink: 0;
    margin-top: 2px;
  }

  .footer-link {
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.2s ease;
    flex: 1;
  }

  .footer-link:hover {
    color: var(--color-terracotta);
  }

  .footer-address {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .footer-address-text {
    color: var(--color-text-secondary);
    line-height: 1.6;
    flex: 1;
  }

  .footer-bottom {
    border-top: 1px solid var(--color-border);
    padding: 1.5rem 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-copyright {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    margin: 0;
  }

  .footer-credit {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    margin: 0;
  }

  .footer-credit-link {
    color: var(--color-text);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .footer-credit-link:hover {
    color: var(--color-terracotta);
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 2rem 0 1.5rem;
    }

    .footer-bottom {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 0.75rem;
    }
  }
</style>
