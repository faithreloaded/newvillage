---
const { src, alt, caption } = Astro.props;
---

<section class="blog-block">
  <div class="blog-block-image">
    <img src={src} alt={alt} />
    {caption && <p class="blog-block-caption">{caption}</p>}
  </div>
</section>

<style>
  .blog-block {
    margin: 3rem 0;
  }

  .blog-block-image {
    width: 100%;
    max-height: 500px;
    overflow: hidden;
    border-radius: 0.75rem;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .blog-block-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0.75rem;
  }

  .blog-block-caption {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    text-align: center;
    margin: 1rem 0 0 0;
    font-style: italic;
  }
</style>
