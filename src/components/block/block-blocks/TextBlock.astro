---
const { title, text } = Astro.props;
---

<section class="blog-block">
  {title && <h2 class="blog-block-title">{title}</h2>}
  <p class="blog-block-text">{text}</p>
</section>

<style>
  .blog-block {
    margin: 3rem 0;
  }

  .blog-block-title {
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--color-text);
    margin: 0 0 1rem 0;
    line-height: 1.3;
  }

  .blog-block-text {
    font-size: 1rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin: 0;
  }
</style>
