---
import { getLangFromUrl, type Locale, loadT } from '../../i18n';

const lang: Locale = getLangFromUrl(Astro.url);
const t = await loadT(lang, ['header']);
---

<header class="header" id="main-header">
  <div class="container">
    <div class="header-content">
      <!-- Logo -->
      <div class="logo">
        <a href={`/${lang}`} class="logo-link">
          <img src="/images/logo.svg" alt="Logo" class="logo-img" />
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <nav class="nav desktop-only">
        <ul class="nav-list">
          <li class="nav-item">
            <a href={`/${lang}`} class="nav-link">{t('nav.home')}</a>
          </li>
          <li class="nav-item">
            <a href={`/${lang}/classes`} class="nav-link">{t('nav.classes')}</a>
          </li>
          <li class="nav-item">
            <a href={`/${lang}/prices`} class="nav-link">{t('nav.prices')}</a>
          </li>
          <li class="nav-item">
            <a href={`/${lang}/schedule`} class="nav-link">{t('nav.schedule')}</a>
          </li>
          <li class="nav-item">
            <a href={`/${lang}/contact`} class="nav-link">{t('nav.contact')}</a>
          </li>
          <li class="nav-item">
            <a href={`/${lang}/buttons`} class="nav-link">{t('nav.buttons')}</a>
          </li>
        </ul>
      </nav>
      
      <!-- Actions (Desktop) -->
      <div class="header-actions desktop-only">
        <a href={`/${lang}/book`} class="btn btn-primary btn-glass-header">{t('actions.bookNow')}</a>
      </div>
      
      <!-- Mobile Controls -->
      <div class="mobile-controls mobile-only">
        <!-- Hamburger Button -->
        <button class="hamburger-btn" id="hamburger-btn">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="3" y1="6" x2="21" y2="6"/>
            <line x1="3" y1="12" x2="21" y2="12"/>
            <line x1="3" y1="18" x2="21" y2="18"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Menu Overlay -->
  <div class="mobile-menu-overlay" id="mobile-menu-overlay"></div>
  
  <!-- Mobile Menu -->
  <div class="mobile-menu" id="mobile-menu">
    <div class="mobile-menu-header">
      <div class="mobile-logo">
        <img src="/images/logo.svg" alt="Logo" class="mobile-logo-img" />
      </div>
      <button class="mobile-close-btn" id="mobile-close-btn">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>
    </div>
    
    <nav class="mobile-nav">
      <ul class="mobile-nav-list">
        <li class="mobile-nav-item">
          <a href={`/${lang}`} class="mobile-nav-link">{t('nav.home')}</a>
        </li>
        <li class="mobile-nav-item">
          <a href={`/${lang}/classes`} class="mobile-nav-link">{t('nav.classes')}</a>
        </li>
        <li class="mobile-nav-item">
          <a href={`/${lang}/prices`} class="mobile-nav-link">{t('nav.prices')}</a>
        </li>
        <li class="mobile-nav-item">
          <a href={`/${lang}/schedule`} class="mobile-nav-link">{t('nav.schedule')}</a>
        </li>
        <li class="mobile-nav-item">
          <a href={`/${lang}/contact`} class="mobile-nav-link">{t('nav.contact')}</a>
        </li>
        <li class="mobile-nav-item">
          <a href={`/${lang}/buttons`} class="mobile-nav-link">{t('nav.buttons')}</a>
        </li>
      </ul>
      <div class="mobile-nav-actions">
        <a href={`/${lang}/book`} class="btn btn-primary mobile-book-btn">{t('actions.bookNow')}</a>
      </div>
    </nav>
  </div>
</header>

<style>
  .header {
    background: transparent;
    border-bottom: 1px solid transparent;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    transition: all 0.3s ease;
  }

  .header.scrolled {
    background: var(--color-background);
    border-bottom: 1px solid var(--color-border);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }


  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.25rem 0;
  }

  .logo-link {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .logo-img {
    height: 2rem;
    width: auto;
    transition: filter 0.3s ease;
  }

  .header:not(.scrolled) .logo-img {
    filter: brightness(0) invert(1);
  }

  /* Desktop Navigation */
  .nav {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    justify-content: center;
  }

  .nav-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
  }

  .nav-link {
    color: var(--color-text);
    text-decoration: none;
    font-weight: 400;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: color 0.2s ease;
  }

  .header:not(.scrolled) .nav-link {
    color: #ffffff;
  }

  .nav-link:hover {
    color: var(--color-terracotta);
  }

  .header:not(.scrolled) .nav-link:hover {
    color: rgba(255, 255, 255, 0.8);
  }

  /* Header Actions */
  .header-actions {
    display: flex;
    align-items: center;
  }

  .btn-glass-header {
    background: rgba(201, 125, 96, 0.2) !important;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3) !important;
    color: #ffffff !important;
  }

  .header.scrolled .btn-glass-header {
    background: var(--color-terracotta) !important;
    border: none !important;
    color: #ffffff !important;
  }

  .header.scrolled .btn-glass-header:hover {
    background: var(--color-terracotta-dark) !important;
  }

  .btn-glass-header:hover {
    background: rgba(201, 125, 96, 0.3) !important;
    border-color: rgba(255, 255, 255, 0.4) !important;
  }

  /* Mobile Controls */
  .mobile-controls {
    display: none;
    align-items: center;
    gap: 1rem;
  }

  /* Hamburger Button */
  .hamburger-btn {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    color: var(--color-text);
    transition: color 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .header:not(.scrolled) .hamburger-btn {
    color: #ffffff;
  }

  .hamburger-btn:hover {
    color: var(--color-terracotta);
  }

  .header:not(.scrolled) .hamburger-btn:hover {
    color: rgba(255, 255, 255, 0.8);
  }

  /* Mobile Menu Overlay */
  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .mobile-menu-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  /* Mobile Menu */
  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 300px;
    height: 100%;
    background: var(--color-background);
    border-right: 1px solid var(--color-border);
    z-index: 1000;
    transform: translateX(-100%);
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .mobile-menu.active {
    transform: translateX(0);
  }

  .mobile-menu-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    border-bottom: 1px solid var(--color-border);
  }

  .mobile-logo {
    display: flex;
    align-items: center;
  }

  .mobile-logo-img {
    height: 2rem;
    width: auto;
  }

  .mobile-close-btn {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    color: var(--color-text);
    transition: color 0.2s ease;
  }

  .mobile-close-btn:hover {
    color: var(--color-primary);
  }

  .mobile-nav {
    flex: 1;
    padding: 1rem 0;
  }

  .mobile-nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .mobile-nav-item {
    /* Sin bordes separadores */
  }

  .mobile-nav-link {
    display: block;
    padding: 1rem;
    color: var(--color-text);
    text-decoration: none;
    font-size: 16px;
    transition: all 0.2s ease;
  }

  .mobile-nav-link:hover {
    background: var(--color-hover);
    color: var(--color-primary);
  }

  .mobile-nav-actions {
    padding: 1rem;
    border-top: 1px solid var(--color-border);
    display: flex;
    align-items: center;
  }

  .mobile-book-btn {
    width: 100%;
    justify-content: center;
  }


  /* Responsive */
  @media (max-width: 768px) {
    .desktop-only {
      display: none !important;
    }

    .mobile-only {
      display: flex !important;
    }

    .mobile-controls {
      display: flex;
    }
  }

  @media (min-width: 769px) {
    .desktop-only {
      display: block !important;
    }

    .mobile-only {
      display: none !important;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const header = document.getElementById('main-header');
    const hamburgerBtn = document.getElementById('hamburger-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileOverlay = document.getElementById('mobile-menu-overlay');
    const closeBtn = document.getElementById('mobile-close-btn');

    // Handle scroll to change header style
    function handleScroll() {
      if (window.scrollY > 50) {
        header?.classList.add('scrolled');
      } else {
        header?.classList.remove('scrolled');
      }
    }

    // Check initial scroll position
    handleScroll();
    window.addEventListener('scroll', handleScroll);

    function openMenu() {
      if (mobileMenu) mobileMenu.classList.add('active');
      if (mobileOverlay) mobileOverlay.classList.add('active');
      document.body.style.overflow = 'hidden';
    }

    function closeMenu() {
      if (mobileMenu) mobileMenu.classList.remove('active');
      if (mobileOverlay) mobileOverlay.classList.remove('active');
      document.body.style.overflow = '';
    }

    hamburgerBtn?.addEventListener('click', openMenu);
    closeBtn?.addEventListener('click', closeMenu);
    mobileOverlay?.addEventListener('click', closeMenu);

    // Close menu when clicking on nav links
    const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
    mobileNavLinks.forEach(link => {
      link.addEventListener('click', closeMenu);
    });
  });
</script>
