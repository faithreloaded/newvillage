---
import { LOCALES, type Locale, loadT } from '../i18n';

interface Props {
  lang: Locale;
}

const { lang } = Astro.props;
const t = await loadT(lang, ['home', 'header']);

function getLangUrl(newLang: Locale): string {
  const currentPath = Astro.url.pathname;
  const pathWithoutLang = currentPath.replace(/^\/(es|en|ca)/, '');
  return `/${newLang}${pathWithoutLang || '/plans'}`;
}

const langLabels: Record<Locale, string> = {
  es: 'ESP',
  en: 'ENG',
  ca: 'CAT'
};

const movementLink = `/${lang}/#disciplines`;
---

<header class="header-plans header-hidden" id="header-plans">
  <div class="container">
    <div class="header-content">
      <div class="header-logo">
        <a href={`/${lang}/`}>
          <img src="/images/logo.svg" alt="NewVillage" class="logo-icon" />
        </a>
      </div>
      
      <div class="header-right desktop-only">
        <nav class="header-nav">
          <a href={`/${lang}/`} class="nav-link">HOME</a>
          <a href={movementLink} class="nav-link">{t('nav.movement')}</a>
          <a href={`/${lang}/plans`} class="nav-link">{t('nav.plans')}</a>
          <a href="#" class="nav-link my-account-trigger">{t('nav.myAccount')}</a>
        </nav>
        
        <a href={`/${lang}/booking`} class="btn-reserva">{t('actions.reserve')}</a>
        
        <div class="lang-selector">
          {(() => {
            const allLocales = ['ca', 'es', 'en'] as Locale[];
            const others = allLocales.filter(l => l !== lang);
            const ordered = [others[0], lang, others[1]];
            return ordered.map((locale) => (
              <a 
                href={getLangUrl(locale)} 
                class={`lang-item ${locale === lang ? 'active' : ''}`}
              >
                {langLabels[locale]}
              </a>
            ));
          })()}
        </div>
      </div>

      <button class="hamburger-btn mobile-only" id="hamburger-btn" aria-label="Menu">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#2c2c2c" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>
    </div>
  </div>
</header>

<div class="mobile-menu-overlay" id="mobile-menu-overlay"></div>

<div class="mobile-menu" id="mobile-menu">
  <div class="mobile-menu-header">
    <div class="header-logo">
       <img src="/images/logo.svg" alt="NewVillage" class="logo-icon" />
    </div>
    <button class="close-menu-btn" id="close-menu-btn" aria-label="Close menu">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#2c2c2c" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>
  
  <div class="mobile-menu-content">
    <nav class="mobile-nav">
      <a href={`/${lang}/`} class="mobile-nav-link">HOME</a>
      <a href={movementLink} class="mobile-nav-link">{t('nav.movement')}</a>
      <a href={`/${lang}/plans`} class="mobile-nav-link">{t('nav.plans')}</a>
      <a href="#" class="mobile-nav-link my-account-trigger">{t('nav.myAccount')}</a>
    </nav>
    
    <a href={`/${lang}/booking`} class="btn-reserva mobile-btn-reserva">{t('actions.reserve')}</a>
    
    <div class="mobile-lang-selector">
      {(LOCALES as readonly Locale[]).map((locale) => (
        <a 
          href={getLangUrl(locale)} 
          class={`mobile-lang-item ${locale === lang ? 'active' : ''}`}
        >
          {langLabels[locale]}
        </a>
      ))}
    </div>
  </div>
</div>

<div class="modal-overlay" id="account-modal">
  <div class="modal-content">
    <button class="modal-close" id="close-account-modal">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
    <h2 class="modal-title">{t('nav.myAccount')}</h2>
    <div class="modal-body">
      <p class="modal-text">{t('account.accessText')}</p>
      <a href="https://innerflow.virtuagym.com/" target="_blank" class="modal-btn">{t('account.button')}</a>
    </div>
  </div>
</div>

<script>
  const hamburgerBtn = document.getElementById('hamburger-btn');
  const closeMenuBtn = document.getElementById('close-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const overlay = document.getElementById('mobile-menu-overlay');

  function openMenu() {
    mobileMenu?.classList.add('active');
    overlay?.classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  function closeMenu() {
    mobileMenu?.classList.remove('active');
    overlay?.classList.remove('active');
    document.body.style.overflow = '';
  }

  hamburgerBtn?.addEventListener('click', openMenu);
  closeMenuBtn?.addEventListener('click', closeMenu);
  overlay?.addEventListener('click', closeMenu);

  const accountModal = document.getElementById('account-modal');
  const closeAccountBtn = document.getElementById('close-account-modal');
  const accountTriggers = document.querySelectorAll('.my-account-trigger');

  function openAccountModal(e: Event) {
    e.preventDefault();
    accountModal?.classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  function closeAccountModal() {
    accountModal?.classList.remove('active');
    document.body.style.overflow = '';
  }

  accountTriggers.forEach(trigger => trigger.addEventListener('click', openAccountModal));
  closeAccountBtn?.addEventListener('click', closeAccountModal);
  accountModal?.addEventListener('click', (e) => {
    if (e.target === accountModal) closeAccountModal();
  });

  // Plans: header aparece al hacer scroll DOWN > 200px
  let header = null;

  function initHeader() {
    header = document.getElementById('header-plans');
    if (!header) return requestAnimationFrame(initHeader);

    // Asegurar que empiece oculto siempre
    header.classList.add('header-hidden');

    window.addEventListener('scroll', () => {
      const y = window.scrollY || document.documentElement.scrollTop;

      if (y > 200) {
        header.classList.remove('header-hidden');
      } else {
        header.classList.add('header-hidden');
      }
    }, { passive: true });

    // Verificar estado inicial
    const initialY = window.scrollY || document.documentElement.scrollTop;
    if (initialY <= 200) {
      header.classList.add('header-hidden');
    }
  }

  initHeader();
</script>

<style>
  .header-plans {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 1000;
    padding: 1.5rem 0;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-100%);
    pointer-events: none;
    transition: opacity 0.2s ease, visibility 0.2s ease, transform 0.2s ease;
  }

  .header-plans.header-hidden {
    opacity: 0;
    visibility: hidden;
    transform: translateY(-100%);
    pointer-events: none;
  }

  .header-plans:not(.header-hidden) {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    pointer-events: auto;
    background: #ffffff;
    animation: fadeDown 0.4s ease-out;
  }

  @keyframes fadeDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .container {
    box-sizing: border-box;
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 2rem;
    height: 100%;
    display: flex;
    align-items: center;
  }

  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    width: 100%;
  }

  .header-logo {
    flex-shrink: 0;
    z-index: 101;
  }

  .logo-icon {
    height: 58px;
    width: auto;
    max-width: 335px;
  }

  .header-right {
    display: flex;
    align-items: center;
    gap: 3rem;
  }

  .header-nav {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-link {
    color: #2c2c2c;
    text-decoration: none;
    font-family: 'Oswald', sans-serif;
    font-weight: 400;
    font-size: 22px;
    line-height: 50px;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    transition: opacity 0.2s ease;
  }

  .nav-link:hover {
    opacity: 0.7;
  }

  .btn-reserva {
    background-color: rgba(237, 109, 100, 0.9);
    color: #ffffff;
    padding: 0.75rem 2rem;
    border-radius: 9999px;
    text-decoration: none;
    font-family: 'Oswald', sans-serif;
    font-weight: 400;
    font-size: 22px;
    line-height: normal;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: background-color 0.2s ease;
    flex-shrink: 0;
    display: inline-block;
  }

  .btn-reserva:hover {
    background-color: rgba(237, 109, 100, 1);
  }

  .lang-selector {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    align-items: center;
    justify-content: center;
  }

  .lang-item {
    color: #2c2c2c;
    text-decoration: none;
    font-family: 'Oswald', sans-serif;
    font-weight: 400;
    font-size: 20px;
    line-height: normal;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.25rem 0.5rem;
    transition: all 0.2s ease;
    text-align: center;
  }

  .lang-item.active {
    font-weight: 600;
    font-size: 24px;
    color: #ED6D64;
  }

  .mobile-only {
    display: none;
  }

  .hamburger-btn {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    display: none;
  }

  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 998;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .mobile-menu-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .mobile-menu {
    position: fixed;
    top: 0;
    right: 0;
    width: 85%;
    max-width: 400px;
    height: 100%;
    background: #ffffff;
    z-index: 999;
    transform: translateX(100%);
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
    box-shadow: -2px 0 10px rgba(0,0,0,0.1);
  }

  .mobile-menu.active {
    transform: translateX(0);
  }

  .mobile-menu-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
    border-bottom: 1px solid #eee;
  }

  .mobile-menu-header .logo-icon {
    height: 35px;
    width: auto;
  }

  .close-menu-btn {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .mobile-menu-content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
  }

  .mobile-nav {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    align-items: center;
  }

  .mobile-nav-link {
    color: #2c2c2c;
    text-decoration: none;
    font-family: 'Oswald', sans-serif;
    font-size: 24px;
    font-weight: 400;
    text-transform: uppercase;
  }

  .mobile-btn-reserva {
    width: auto;
    min-width: 200px;
    text-align: center;
  }

  .mobile-lang-selector {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .mobile-lang-item {
    color: #2c2c2c;
    text-decoration: none;
    font-family: 'Oswald', sans-serif;
    font-size: 18px;
    font-weight: 400;
  }

  .mobile-lang-item.active {
    font-weight: 600;
    color: #ED6D64;
  }

  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    z-index: 2000;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    backdrop-filter: blur(5px);
  }

  .modal-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .modal-content {
    background: white;
    padding: 3rem;
    border-radius: 10px;
    width: 90%;
    max-width: 500px;
    position: relative;
    text-align: center;
    transform: translateY(20px);
    transition: transform 0.3s ease;
  }

  .modal-overlay.active .modal-content {
    transform: translateY(0);
  }

  .modal-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .modal-title {
    font-family: 'Oswald', sans-serif;
    font-size: 32px;
    font-weight: 500;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
  }

  .modal-text {
    font-family: 'Oswald', sans-serif;
    font-size: 18px;
    margin-bottom: 2rem;
    color: #666;
  }

  .modal-btn {
    display: inline-block;
    background-color: #ED6D64;
    color: white;
    padding: 1rem 2rem;
    text-decoration: none;
    font-family: 'Oswald', sans-serif;
    font-weight: 500;
    text-transform: uppercase;
    border-radius: 5px;
    transition: background 0.3s ease;
  }

  .modal-btn:hover {
    background-color: #DB5639;
  }

  @media (max-width: 1024px) {
    .desktop-only {
      display: none;
    }
    .mobile-only {
      display: block;
    }
    .hamburger-btn {
      display: block;
    }
  }
</style>
