---
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { LOCALES, type Locale, loadT } from '../../../../i18n';
import RelatedPosts from '../../../../components/block/block-related-posts.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const paths = allPosts.map((post: any) => {
    const slug = post.slug.split('/').pop();
    const lang = post.slug.split('/')[0];
    return {
      params: { lang, slug },
      props: { post }
    };
  });
  return paths;
}

const { lang, slug } = Astro.params as { lang: Locale; slug: string };
const { post } = Astro.props as { post: any };
const t = await loadT(lang, ['home']);

// Obtener todos los posts para RelatedPosts
const allPosts = await getCollection('blog');

const { Content } = await post.render();
---

<BaseLayout 
  title={`${post.data.title} | Mi Sitio Web`} 
  description={post.data.excerpt}
>
  <div class="post-page">
    <div class="container">
      <article class="post">
        <header class="post-header">
          <div class="post-meta">
            <span class="pill-category-blog-post">
              {post.data.category}
            </span>
            <span class="pill-date">
              {post.data.date.toLocaleDateString(lang === 'es' ? 'es-ES' : 'en-US')}
            </span>
          </div>
          <h1 class="post-title">{post.data.title}</h1>
          <p class="post-excerpt">{post.data.excerpt}</p>
        </header>

        {post.data.image && (
          <div class="post-image">
            <img src={post.data.image} alt={post.data.title} />
          </div>
        )}

        <div class="post-content">
          <Content />
        </div>

        <footer class="post-footer">
          <a href={`/${lang}/blog`} class="back-link">
            ← {lang === 'es' ? 'Volver al blog' : 'Back to blog'}
          </a>
        </footer>
      </article>

      <!-- Related Posts -->
      <RelatedPosts currentSlug={post.slug} posts={allPosts} lang={lang} />
    </div>
  </div>
</BaseLayout>

<style>
  .post-page {
    padding: 6rem 0;
  }


  .post {
    background: var(--color-background);
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .post-header {
    padding: 3rem 3rem 2rem;
    text-align: center;
  }

  .post-meta {
    margin-bottom: 2rem;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .post-title {
    font-size: 2.5rem;
    font-weight: 500;
    color: var(--color-text);
    margin: 0 0 1.5rem 0;
    line-height: 1.2;
  }

  .post-excerpt {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.6;
  }

  .post-image {
    width: 100%;
    max-height: 500px;
    overflow: hidden;
    border-radius: 0.5rem;
    margin: 2rem 0;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-content {
    padding: 0 3rem 3rem;
    line-height: 1.8;
    color: var(--color-text);
  }

  .post-content h1,
  .post-content h2,
  .post-content h3,
  .post-content h4,
  .post-content h5,
  .post-content h6 {
    color: var(--color-text);
    margin: 3rem 0 1.5rem 0;
    font-weight: 500;
  }

  .post-content h1 {
    font-size: 2rem;
  }

  .post-content h2 {
    font-size: 1.75rem;
  }

  .post-content h3 {
    font-size: 1.5rem;
  }

  .post-content p {
    margin: 2rem 0;
    line-height: 1.8;
  }

  .post-content ul,
  .post-content ol {
    margin: 2rem 0;
    padding-left: 0;
    list-style: none;
  }

  .post-content li {
    margin: 1rem 0;
    line-height: 1.7;
    position: relative;
    padding-left: 1.5rem;
  }

  .post-content li::before {
    content: "•";
    color: var(--color-primary);
    font-weight: bold;
    position: absolute;
    left: 0;
    top: 0;
  }

  .post-content blockquote {
    border-left: 4px solid var(--color-primary);
    padding-left: 1.5rem;
    margin: 2.5rem 0;
    font-style: italic;
    color: var(--color-text-secondary);
    line-height: 1.7;
  }

  .post-content code {
    background: var(--color-background-secondary);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-family: 'Monaco', 'Menlo', monospace;
    font-size: 0.875rem;
  }

  .post-content pre {
    background: var(--color-background-secondary);
    padding: 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 2.5rem 0;
    line-height: 1.6;
  }

  .post-content pre code {
    background: none;
    padding: 0;
  }

  /* Pills de categoría dentro del blog post - estilo específico */
  .pill-category-blog-post {
    display: inline-flex;
    align-items: center;
    background: rgba(0, 0, 0, 0.08);
    color: var(--color-text-secondary);
    padding: 8px 16px;
    border-radius: 9999px;
    font-size: 11px;
    font-weight: 500;
    text-transform: none;
    letter-spacing: 0;
    border: none;
    transition: all 0.2s ease;
    line-height: 1;
    margin: 0;
    cursor: default;
  }

  .pill-category-blog-post:hover {
    background: rgba(0, 0, 0, 0.12);
    color: var(--color-text);
    cursor: default;
  }


  .post-footer {
    padding: 1rem 0 2rem 0;
    text-align: center;
  }

  .back-link {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--color-primary-dark);
  }

  @media (max-width: 768px) {
    .post-title {
      font-size: 2rem;
    }

    .post-header,
    .post-content,
    .post-footer {
      padding: 1.5rem;
    }
  }
</style>
