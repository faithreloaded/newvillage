---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { LOCALES, type Locale, loadT } from '../../../i18n/index';

export async function getStaticPaths() {
  return (LOCALES as readonly string[]).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Locale };
const t = await loadT(lang, ['header', 'footer']);
---

<BaseLayout title={lang === 'es' ? 'Botones - New Village' : lang === 'ca' ? 'Botons - New Village' : 'Buttons - New Village'} description={lang === 'es' ? 'Explora nuestra colección de botones modernos y elegantes' : lang === 'ca' ? 'Explora la nostra col·lecció de botons moderns i elegants' : 'Explore our collection of modern and elegant buttons'} lang={lang}>
  <main class="buttons-page">
    <div class="container">
      <div class="buttons-header">
        <h1 class="buttons-title">
          {lang === 'es' ? 'Colección de Botones' : lang === 'ca' ? 'Col·lecció de Botons' : 'Button Collection'}
        </h1>
        <p class="buttons-description">
          {lang === 'es' 
            ? 'Explora nuestra selección de botones modernos y elegantes para tus proyectos' 
            : lang === 'ca'
            ? 'Explora la nostra selecció de botons moderns i elegants per als teus projectes'
            : 'Explore our selection of modern and elegant buttons for your projects'
          }
        </p>
      </div>

      <div class="buttons-showcase">
        <section class="button-section">
          <h2 class="button-section-title">Botones Principales</h2>
          <div class="button-row">
            <button class="btn btn-primary">Botón Primario</button>
            <button class="btn btn-outline">Botón Outline</button>
            <button class="btn btn-secondary">Botón Secundario</button>
          </div>
        </section>

        <section class="button-section">
          <h2 class="button-section-title">Botones de Estado</h2>
          <div class="button-row">
            <button class="btn btn-success">Botón Success</button>
            <button class="btn btn-danger">Botón Danger</button>
            <button class="btn btn-warning">Botón Warning</button>
            <button class="btn btn-info">Botón Info</button>
          </div>
        </section>

        <section class="button-section">
          <h2 class="button-section-title">Botones Deshabilitados</h2>
          <div class="button-row">
            <button class="btn btn-primary" disabled>Primario Deshabilitado</button>
            <button class="btn btn-outline" disabled>Outline Deshabilitado</button>
            <button class="btn btn-secondary" disabled>Secundario Deshabilitado</button>
          </div>
        </section>

        <section class="button-section">
          <h2 class="button-section-title">Botón Read More</h2>
          <div class="button-row">
            <span class="btn-read-more">
              Leer más <span class="arrow">→</span>
            </span>
          </div>
        </section>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .buttons-page {
    padding: 4rem 0;
  }

  .buttons-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .buttons-title {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-semibold);
    color: var(--color-text);
    margin: 0 0 1rem 0;
  }

  .buttons-description {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    max-width: 600px;
    margin: 0 auto;
  }

  .buttons-showcase {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .button-section {
    padding: 2rem;
    background: var(--color-background-alt);
    border-radius: var(--radius-lg);
  }

  .button-section-title {
    font-size: var(--font-size-xl);
    font-weight: var(--font-semibold);
    color: var(--color-text);
    margin: 0 0 1.5rem 0;
    text-align: center;
  }

  .button-row {
    display: flex;
    gap: 1rem;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .buttons-page {
      padding: 2rem 0;
    }

    .buttons-header {
      margin-bottom: 2rem;
    }

    .buttons-title {
      font-size: var(--font-size-3xl);
    }

    .button-section {
      padding: 1.5rem;
    }

    .button-row {
      flex-direction: column;
      gap: 1rem;
    }

    .button-row .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
