    font-weight: 500;
    font-size: 48px;
    line-height: 1.2;
    color: #2c2c2c;
    text-transform: uppercase;
    text-align: center;
    margin-bottom: 2.5rem;
    width: 100%;
  }

  .faqs-accordion {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .faq-item {
    border-bottom: 1px solid #eee;
  }

  .faq-question {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 0;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    transition: color 0.3s ease;
  }

  .faq-question span {
    font-family: 'Oswald', sans-serif;
    font-weight: 400;
    font-size: 24px;
    color: #2c2c2c;
