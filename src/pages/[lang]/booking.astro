  }

  .footer-logo-img {
    height: auto;
    width: 180px;
  }

  .footer-links {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .footer-link {
    font-family: 'Oswald', sans-serif;
    font-weight: 500;
