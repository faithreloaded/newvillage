---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { LOCALES, type Locale, loadT } from '../../i18n';

export async function getStaticPaths() {
  return (LOCALES as readonly string[]).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Locale };
const t = await loadT(lang, ['home', 'header', 'footer']);
---

<BaseLayout 
  title={t('meta.title')}
  description={t('meta.description')}
  lang={lang}
>
  <!-- Landing Container Full Screen -->
  <div class="landing-container">
    <div class="landing-wrapper">
      <div class="landing-content">
        <p class="landing-text-top">GET READY TO MOVE</p>
        <h1 class="landing-text-main">
          <span class="text-something">SOMETHING</span>
          <span class="text-exciting">EXCITING</span>
          <span class="text-coming">IS COMING</span>
        </h1>
        <p class="landing-text-bottom">movement studio · in the 22@ district</p>
      </div>
      
      <div class="landing-cta">
        <a href="https://forms.gle/WykMu82bAUShpQuEA" target="_blank" rel="noopener noreferrer" class="landing-button">
          <span class="button-text-main">JOIN THE MOVEMENT</span>
          <span class="button-text-sub">ÚNETE AL MOVIMIENTO</span>
        </a>
      </div>
      
      <!-- Navigation Links -->
      <nav class="coming-soon-nav">
        <a href={`/preview/${lang}/`} class="nav-link-item">INICIO</a>
        <span class="nav-separator">|</span>
        <a href={`/${lang}/plans`} class="nav-link-item">PLANES</a>
        <span class="nav-separator">|</span>
        <a href={`/${lang}/contact`} class="nav-link-item">CONTACTO</a>
        <span class="nav-separator">|</span>
        <a href={`/${lang}/legal`} class="nav-link-item">LEGAL</a>
        <span class="nav-separator">|</span>
        <a href={`/${lang}/privacy`} class="nav-link-item">PRIVACIDAD</a>
      </nav>
    </div>
    
    <img src="/images/logoicon.svg" alt="Logo" class="landing-logo" />
  </div>
</BaseLayout>

<style>
  /* Landing Container - Full Screen */
  .landing-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    min-height: 100vh;
    z-index: 9999;
    background: linear-gradient(to bottom, #ED6D65 0%, #ED6D65 20%, #A53716 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 0;
    margin: 0;
  }

  .landing-wrapper {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    width: 90%;
    max-width: 700px;
    aspect-ratio: 1;
    padding: 1.5rem;
    box-sizing: border-box;
  }

  .landing-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    width: 100%;
    padding: 0;
    box-sizing: border-box;
  }

  .landing-text-top {
    font-family: 'Oswald', sans-serif;
    font-size: 27px;
    font-weight: 500;
    color: #91b9c8;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0;
    text-align: center;
    width: 100%;
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }

  .landing-text-main {
    font-family: 'Oswald', sans-serif;
    font-weight: 600;
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    line-height: 1.1;
    margin: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    text-align: center;
    width: 100%;
  }

  .landing-text-main span {
    display: block;
    text-align: center;
    animation: fadeInUp 0.8s ease-out both;
  }

  .text-something {
    font-size: 50px;
  }

  .text-exciting {
    font-size: 64px;
  }

  .text-coming {
    font-size: 54px;
  }

  /* Desktop - tamaños más grandes manteniendo proporciones */
  @media (min-width: 769px) {
    .landing-wrapper {
      padding: 4rem;
      max-width: 900px;
    }

    .landing-text-top {
      font-size: 42px;
      font-weight: 400;
      line-height: 100%;
    }

    .text-something {
      font-size: 81px;
      font-weight: 700;
      line-height: 100%;
    }

    .text-exciting {
      font-size: 104px;
      font-weight: 700;
      line-height: 100%;
    }

    .text-coming {
      font-size: 88px;
      font-weight: 700;
      line-height: 100%;
    }

    .landing-text-bottom {
      font-size: 24px !important;
      font-weight: 400 !important;
      line-height: 100% !important;
    }

    .landing-cta {
      margin-top: 59px;
    }
  }

  .landing-text-main span:nth-child(1) {
    animation-delay: 0.4s;
  }

  .landing-text-main span:nth-child(2) {
    animation-delay: 0.6s;
  }

  .landing-text-main span:nth-child(3) {
    animation-delay: 0.8s;
  }

  .landing-text-bottom {
    font-family: 'Oswald', sans-serif;
    font-size: 16px;
    font-weight: 300;
    color: #ffffff;
    text-transform: none;
    letter-spacing: 0.05em;
    margin: 0;
    opacity: 0.7;
    text-align: center;
    width: 100%;
    animation: fadeInUp 0.8s ease-out 1s both;
  }

  .landing-cta {
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
    animation: fadeInUp 0.8s ease-out 1.2s both;
  }

  /* Navigation Links */
  .coming-soon-nav {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
    z-index: 3;
    animation: fadeInUp 0.8s ease-out 1.4s both;
    flex-wrap: wrap;
  }

  .nav-link-item {
    font-family: 'Oswald', sans-serif;
    font-size: 16px;
    font-weight: 400;
    color: #ffffff;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: color 0.3s ease;
    opacity: 0.8;
  }

  .nav-link-item:hover {
    color: #91b9c8;
    opacity: 1;
  }

  .nav-separator {
    color: #ffffff;
    font-size: 16px;
    opacity: 0.5;
  }

  .landing-button {
    background: transparent;
    border: 3px solid #91b9c8;
    padding: 1rem 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    font-family: 'Oswald', sans-serif;
    text-decoration: none;
  }

  .landing-button:hover {
    background: rgba(145, 185, 200, 0.08);
    border-color: rgba(145, 185, 200, 1);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(145, 185, 200, 0.15);
  }

  .button-text-main {
    color: #ffffff;
    font-size: 26px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    line-height: 100%;
  }

  .button-text-sub {
    color: #91b9c8;
    font-size: 23px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    line-height: 100%;
  }

  .landing-logo {
    width: 1200px;
    height: auto;
    position: absolute;
    top: 68%;
    left: 37%;
    transform: translate(-50%, -50%) rotate(-90deg);
    filter: brightness(0) invert(1);
    opacity: 0.1;
    z-index: 1;
    animation: fadeIn 1.2s ease-out 0.5s both;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 0.1;
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .landing-container {
      height: 100vh;
      height: 100dvh; /* Dynamic viewport height for mobile */
    }

    .landing-wrapper {
      gap: 1.5rem;
      padding: 1rem;
      width: 95%;
    }

    .landing-content {
      gap: 0.75rem;
    }

    .landing-text-top {
      font-size: 24px;
    }

    .landing-text-main {
      gap: 0.25rem;
    }

    .landing-button {
      padding: 0.875rem 1.5rem;
      border-width: 2px;
    }

    .button-text-main {
      font-size: 18px;
      font-weight: 500;
      line-height: 100%;
    }

    .button-text-sub {
      font-size: 18px;
      font-weight: 500;
      line-height: 100%;
    }

    .landing-cta {
      margin-top: 48px;
    }

    .coming-soon-nav {
      margin-top: 1.5rem;
      gap: 0.75rem;
    }

    .nav-link-item {
      font-size: 14px;
    }

    .nav-separator {
      font-size: 14px;
    }

    .landing-logo {
      width: 850px;
      top: 82%;
      left: 15%;
      transform: translate(-50%, -50%) rotate(-90deg);
    }
  }

  @media (max-width: 480px) {
    .landing-content {
      padding: 1rem;
      gap: 0.5rem;
    }
  }
</style>
