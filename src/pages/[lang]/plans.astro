  <script>
    // Activar hover en móvil con touch
    const packItem1 = document.querySelector('.pack-item-1');
    const packItem2 = document.querySelector('.pack-item-2');
    
    function setupTouchHover(element: HTMLElement) {
      let touchTimeout: ReturnType<typeof setTimeout> | undefined;
      
      element.addEventListener('touchstart', (e) => {
        e.preventDefault();
        element.classList.add('touch-active');
        if (touchTimeout) clearTimeout(touchTimeout);
      }, { passive: false });
      
      element.addEventListener('touchend', (e) => {
        e.preventDefault();
        touchTimeout = setTimeout(() => {
          element.classList.remove('touch-active');
        }, 300);
      }, { passive: false });
      
      element.addEventListener('touchcancel', () => {
        if (touchTimeout) clearTimeout(touchTimeout);
        element.classList.remove('touch-active');
      });
    }
    
    if (packItem1) setupTouchHover(packItem1 as HTMLElement);
    if (packItem2) setupTouchHover(packItem2 as HTMLElement);
  </script>
