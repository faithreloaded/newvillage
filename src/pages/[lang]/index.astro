    <script>
      // Discipline Detail Toggle
      function toggleDiscipline(disciplineName) {
        const item = document.querySelector(`[data-discipline="${disciplineName}"]`);
        const detail = document.getElementById(`${disciplineName}-detail`);
        
        // Comportamiento simplificado en Mobile: Mostrar debajo (scroll down)
        // Ya no usamos flip card ni ocultamos el carrusel
        
        const isOpen = detail?.classList.contains('active');

        // Cerrar todas las demás secciones
        document.querySelectorAll('.discipline-detail').forEach(d => {
          if (d.id !== `${disciplineName}-detail`) {
            d.classList.remove('active');
            d.style.display = 'none'; // Asegurar que se ocultan en mobile
          }
        });
        document.querySelectorAll('.discipline-item').forEach(i => {
          if (i.dataset.discipline !== disciplineName) {
            i.classList.remove('active');
          }
        });

        if (isOpen) {
          detail?.classList.remove('active');
          if (window.innerWidth <= 768) detail.style.display = 'none';
          item?.classList.remove('active');
        } else {
          detail?.classList.add('active');
          if (window.innerWidth <= 768) detail.style.display = 'block';
          item?.classList.add('active');
          
          // Scroll suave: Centrar el contenido detallado que se acaba de abrir
          setTimeout(() => {
            if (detail) {
              const detailRect = detail.getBoundingClientRect();
              const absoluteTop = window.pageYOffset + detailRect.top;
              const headerOffset = 120; // Espacio para el header + margen
              const windowHeight = window.innerHeight;
              const detailHeight = detailRect.height;

              // Centrar el contenido en la ventana
              const centerOffset = (windowHeight - detailHeight) / 2;
              const scrollTop = absoluteTop - headerOffset - Math.max(centerOffset, 50);

              window.scrollTo({
                top: Math.max(scrollTop, 0), // No permitir scroll negativo
                behavior: 'smooth'
              });
            }
          }, 300); // Aumentar el timeout para que el contenido esté completamente expandido
        }
      }

