        const threshold = 50; // Minimum distance for swipe
        const isMobile = window.innerWidth <= 768;
        
        if (!isMobile) return;

        if (touchEndX < touchStartX - threshold) {
          // Swipe Left -> Next Slide
          nextSlide();
        }
        
