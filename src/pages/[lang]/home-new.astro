      const closeMenuBtn = document.getElementById('close-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');
      const overlay = document.getElementById('mobile-menu-overlay');

      function openMenu() {
        mobileMenu?.classList.add('active');
        overlay?.classList.add('active');
        document.body.style.overflow = 'hidden'; // Prevent scrolling
      }

      function closeMenu() {
        mobileMenu?.classList.remove('active');
        overlay?.classList.remove('active');
        document.body.style.overflow = ''; // Restore scrolling
      }

      hamburgerBtn?.addEventListener('click', openMenu);
      closeMenuBtn?.addEventListener('click', closeMenu);
      overlay?.addEventListener('click', closeMenu);

      // Discipline Detail Toggle
      function toggleDiscipline(disciplineName) {
        const item = document.querySelector(`[data-discipline="${disciplineName}"]`);
        const detail = document.getElementById(`${disciplineName}-detail`);
        const isOpen = detail?.classList.contains('active');

        // Cerrar todas las demás secciones
        document.querySelectorAll('.discipline-detail').forEach(d => {
          if (d.id !== `${disciplineName}-detail`) {
            d.classList.remove('active');
          }
        });
        document.querySelectorAll('.discipline-item').forEach(i => {
          if (i.dataset.discipline !== disciplineName) {
            i.classList.remove('active');
          }
        });

        if (isOpen) {
          detail?.classList.remove('active');
          item?.classList.remove('active');
        } else {
          detail?.classList.add('active');
          item?.classList.add('active');
          
          // Scroll suave: Alinear la imagen cerca de la parte superior para ver el contenido debajo
          setTimeout(() => {
            if (item) {
              const itemRect = item.getBoundingClientRect();
              const absoluteTop = window.pageYOffset + itemRect.top;
              const headerOffset = 100; // Espacio para el header
              
              window.scrollTo({
                top: absoluteTop - headerOffset,
                behavior: 'smooth'
              });
            }
          }, 150);
        }
      }

      // Función para manejar clicks en discipline items
      function setupDisciplineClick(disciplineName) {
        const item = document.querySelector(`[data-discipline="${disciplineName}"]`);
        const viewMoreBtn = item?.querySelector('.discipline-view-more-btn');
        
        // Click en el item completo
        item?.addEventListener('click', function(e) {
          // Solo activar si no se hizo click en el botón "ver más"
          if (!e.target.closest('.discipline-view-more-btn')) {
            e.preventDefault();
            toggleDiscipline(disciplineName);
          }
        });

        // Click en el botón "ver más"
        viewMoreBtn?.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          toggleDiscipline(disciplineName);
        });
      }

      // Setup para cada disciplina
      setupDisciplineClick('barre');
      setupDisciplineClick('pilates');
      setupDisciplineClick('funcional');
      setupDisciplineClick('yoga');

      // Mobile Layout Handler
      function handleMobileLayout() {
        const isMobile = window.innerWidth <= 768;
        const container = document.querySelector('.disciplines-container');
        const details = document.querySelectorAll('.discipline-detail');
        
        if (isMobile) {
          // En mobile, movemos cada detail después de su item correspondiente
          details.forEach(detail => {
            const id = detail.id.replace('-detail', '');
            const item = document.querySelector(`.discipline-item[data-discipline="${id}"]`);
            if (item && item.nextElementSibling !== detail) {
               item.after(detail);
            }
          });
        } else {
          // En desktop, movemos los details de vuelta al final del contenedor
          // Manteniendo el orden original: barre, pilates, funcional, yoga
          const order = ['barre-detail', 'pilates-detail', 'funcional-detail', 'yoga-detail'];
          order.forEach(id => {
            const detail = document.getElementById(id);
            if (detail && detail.parentNode !== container) {
              container.appendChild(detail);
            }
          });
        }
      }

      window.addEventListener('resize', handleMobileLayout);
      // Ejecutar al cargar
      handleMobileLayout();
    </script>
  </body>
