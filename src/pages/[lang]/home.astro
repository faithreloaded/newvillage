// Función para procesar texto con bullet points y convertirlo en HTML estructurado
function processFAQText(text: string): { paragraphs: string[], lists: string[][] } {
  const lines = text.split('\n').filter(line => line.trim());
  const paragraphs: string[] = [];
  const lists: string[][] = [];
  let currentList: string[] = [];
  
  for (const line of lines) {
    const trimmed = line.trim();
    // Detectar si es un bullet point (empieza con • o -)
    if (trimmed.startsWith('•') || trimmed.startsWith('-')) {
      currentList.push(trimmed.replace(/^[•-]\s*/, ''));
    } else {
      // Si hay una lista acumulada, guardarla
      if (currentList.length > 0) {
        lists.push([...currentList]);
        currentList = [];
      }
      // Si la línea contiene "•" en el medio, también es parte de una lista
      if (trimmed.includes('•')) {
        const parts = trimmed.split('•').map(p => p.trim()).filter(p => p);
        currentList.push(...parts);
      } else if (trimmed.length > 0) {
        paragraphs.push(trimmed);
      }
    }
  }
  
  // Guardar la última lista si existe
  if (currentList.length > 0) {
    lists.push([...currentList]);
  }
  
  return { paragraphs, lists };
}

// Función específica para q5 (solo lista)
function processFAQ5(text: string): string[] {
  // Dividir por saltos de línea primero, luego por bullet points
  const lines = text.split('\n');
  const items: string[] = [];
  
  for (const line of lines) {
    if (line.includes('•')) {
      // Si la línea contiene bullet points, dividir por ellos
      const parts = line.split('•').map(p => p.trim()).filter(p => p.length > 0);
      items.push(...parts);
    } else if (line.trim().startsWith('•')) {
      items.push(line.trim().replace(/^[•-]\s*/, ''));
    } else if (line.trim().length > 0) {
      items.push(line.trim());
    }
  }
  
  return items.filter(item => item.length > 0);
}

// Función específica para q6 (párrafo + lista)
function processFAQ6(text: string): { paragraph: string, list: string[] } {
  // Buscar el separador según el idioma
  const separators = [
    'En el caso de las membresías:',
    'En el cas de les membresies:',
    'In case of memberships:'
  ];
  
  let separator = '';
  for (const sep of separators) {
    if (text.includes(sep)) {
      separator = sep;
      break;
    }
  }
  
  if (separator) {
    const parts = text.split(separator);
    const paragraph = parts[0]?.trim() || '';
    const listText = parts[1]?.trim() || '';
    const list = listText.split(/•/)
      .map(item => item.trim())
      .filter(item => item.length > 0);
    return { paragraph, list };
  }
  
  // Si no hay separador, buscar bullet points al final
  const bulletIndex = text.lastIndexOf('•');
  if (bulletIndex > 0) {
    const paragraph = text.substring(0, bulletIndex).trim();
    const listText = text.substring(bulletIndex);
    const list = listText.split(/•/)
      .map(item => item.trim())
      .filter(item => item.length > 0);
    return { paragraph, list };
  }
  
  return { paragraph: text, list: [] };
}

// Función específica para q7 (múltiples párrafos y listas)
function processFAQ7(text: string): { paragraphs: string[], list1: string[], list2: string[] } {
  // Buscar los separadores en cualquier idioma
  const sep1Pattern = /(?:Todos los bonos tienen caducidad|Tots els bons tenen caducitat|All packages have an expiration date):/i;
  const sep2Pattern = /(?:Las membresías son mensuales|Les membresies són mensuals|Memberships renew monthly)/i;
  const sep3Pattern = /(?:La membresía incluye además|La membresia inclou, a més|Memberships also include):/i;
  
  const sep1Match = text.match(sep1Pattern);
  const sep2Match = text.match(sep2Pattern);
  const sep3Match = text.match(sep3Pattern);
  
  let intro = '';
  let middleText = '';
  let middleParagraph = '';
  let list2Text = '';
  
  if (sep1Match) {
    const sep1Index = sep1Match.index! + sep1Match[0].length;
    intro = text.substring(0, sep1Match.index!).trim();
    middleText = text.substring(sep1Index).trim();
    
    if (sep2Match && sep2Match.index! > sep1Index) {
      middleText = text.substring(sep1Index, sep2Match.index!).trim();
      const afterSep2 = text.substring(sep2Match.index! + sep2Match[0].length).trim();
      
      if (sep3Match && sep3Match.index! > sep2Match.index!) {
        middleParagraph = afterSep2.substring(0, sep3Match.index! - sep2Match.index! - sep2Match[0].length).trim();
        list2Text = text.substring(sep3Match.index! + sep3Match[0].length).trim();
      } else {
        middleParagraph = afterSep2;
      }
    }
  } else {
    intro = text;
  }
  
  // Extraer lista 1 de middleText
  const list1 = middleText ? middleText.split(/•/)
    .map(item => item.trim())
    .filter(item => item.length > 0 && !item.match(/^(meses|months|mesos|Valid)/i))
    .filter(item => item.length > 3) : [];
  
  // Extraer lista 2 de list2Text
  const list2 = list2Text ? list2Text.split(/•/)
    .map(item => item.trim())
    .filter(item => item.length > 0) : [];
  
  return { 
    paragraphs: [intro, middleParagraph].filter(p => p && p.length > 0), 
    list1, 
    list2 
  };
}

// Función específica para q8 (lista + párrafo final)
function processFAQ8(text: string): { list: Array<string | {type: string, desc: string}>, finalParagraph: string } {
  const finalMarkers = [
    'Todo el material necesario',
    'Tot el material necessari',
    'All necessary equipment'
  ];
  
  let finalMarker = '';
  for (const marker of finalMarkers) {
    if (text.includes(marker)) {
      finalMarker = marker;
      break;
    }
  }
  
  if (finalMarker) {
    const parts = text.split(finalMarker);
    const listText = parts[0]?.trim() || '';
    const finalParagraph = finalMarker + (parts[1]?.trim() || '');
    
    const list = listText.split(/•/)
      .map(item => item.trim())
      .filter(item => item.length > 0)
      .map(item => {
        if (item.includes(':')) {
          const [type, ...descParts] = item.split(':');
          return { type: type.trim(), desc: descParts.join(':').trim() };
        }
        return item;
      });
    
    return { list, finalParagraph };
  }
  
  // Fallback: dividir por bullet points
  const bulletIndex = text.lastIndexOf('Todo');
  if (bulletIndex > 0) {
    const listText = text.substring(0, bulletIndex).trim();
    const finalParagraph = text.substring(bulletIndex).trim();
    const list = listText.split(/•/)
      .map(item => item.trim())
      .filter(item => item.length > 0)
      .map(item => {
        if (item.includes(':')) {
          const [type, ...descParts] = item.split(':');
          return { type: type.trim(), desc: descParts.join(':').trim() };
        }
        return item;
      });
    return { list, finalParagraph };
  }
  
  return { list: [], finalParagraph: text };
}
