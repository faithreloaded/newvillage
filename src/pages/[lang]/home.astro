    <script>
      // Discipline Detail Toggle
      function toggleDiscipline(disciplineName) {
        const item = document.querySelector(`[data-discipline="${disciplineName}"]`);
        const detail = document.getElementById(`${disciplineName}-detail`);
        
        if (!item || !detail) return;
        
        const isOpen = detail.classList.contains('active');
        const isMobile = window.innerWidth <= 768;

        // Cerrar otros detalles abiertos
        document.querySelectorAll('.discipline-detail').forEach(d => {
          if (d.id !== `${disciplineName}-detail`) {
            d.classList.remove('active');
            if (isMobile) d.style.display = 'none';
          }
        });
        document.querySelectorAll('.discipline-item').forEach(i => {
          if (i.dataset.discipline !== disciplineName) {
            i.classList.remove('active');
          }
        });

        if (isOpen) {
          // Cerrar este detalle
          detail.classList.remove('active');
          if (isMobile) detail.style.display = 'none';
          item.classList.remove('active');
        } else {
          // Abrir este detalle
          detail.classList.add('active');
          item.classList.add('active');
          if (isMobile) detail.style.display = 'flex';
          
          // Scroll suave al detalle (solo en desktop o si queremos en móvil)
          if (!isMobile) {
            setTimeout(() => {
              const detailRect = detail.getBoundingClientRect();
              const absoluteTop = window.pageYOffset + detailRect.top;
              const headerOffset = 80;
              const windowHeight = window.innerHeight;
              const detailHeight = detailRect.height;
              const centerOffset = (windowHeight - detailHeight) / 2;
              const scrollTop = absoluteTop - headerOffset - Math.max(centerOffset, 50);
              window.scrollTo({
                top: Math.max(scrollTop, 0),
                behavior: 'smooth'
              });
            }, 350);
          }
        }
      }

      document.querySelectorAll('.mobile-close-detail').forEach(btn => {
        btn.addEventListener('click', (e) => {
            e.preventDefault();
            e.stopPropagation();
            const detail = btn.closest('.discipline-detail');
            if (detail) {
                const id = detail.id.replace('-detail', '');
                toggleDiscipline(id);
            }
        });
      });

      document.addEventListener('click', function(e) {
        const disciplineItem = e.target.closest('.discipline-item');
        if (!disciplineItem) return;
        
        const disciplineName = disciplineItem.dataset.discipline;
        if (!disciplineName) return;
        
        const isMobile = window.innerWidth <= 768;
        
        // Si es móvil y se hace clic en el botón Discover, permitir navegación
        if (e.target.closest('.discipline-view-more-btn.mobile-only')) {
          if (isMobile) {
            // En móvil, permitir que el enlace funcione normalmente
            return;
          }
          // En desktop, mantener el comportamiento de toggle
          e.preventDefault();
          e.stopPropagation();
          toggleDiscipline(disciplineName);
          return;
        }
        
        // Solo prevenir comportamiento por defecto si no es móvil
        if (!isMobile) {
          e.preventDefault();
          toggleDiscipline(disciplineName);
        }
      });

      function handleMobileLayout() {
        const isMobile = window.innerWidth <= 768;
        const container = document.querySelector('.disciplines-container');
        const details = document.querySelectorAll('.discipline-detail');
        
        if (isMobile) {
          details.forEach(detail => {
            const id = detail.id.replace('-detail', '');
            const item = document.querySelector(`.discipline-item[data-discipline="${id}"]`);
            if (item && item.nextElementSibling !== detail) {
               item.after(detail);
            }
          });
        } else {
          const order = ['barre-detail', 'pilates-detail', 'funcional-detail', 'yoga-detail'];
          order.forEach(id => {
            const detail = document.getElementById(id);
            if (detail && detail.parentNode !== container) {
              container.appendChild(detail);
            }
          });
        }
        
        if (typeof updateCarousel === 'function') {
          setTimeout(updateCarousel, 50);
        }
      }

      window.addEventListener('resize', () => {
        handleMobileLayout();
      });
      handleMobileLayout();

      const faqTrigger = document.getElementById('faqs-trigger');
      const faqModal = document.getElementById('faqs-modal');
      const faqClose = document.querySelector('.faqs-modal-close');

      function openFaqModal(e) {
        e.preventDefault();
        faqModal?.classList.add('open');
        document.body.style.overflow = 'hidden';
      }

      function closeFaqModal() {
        faqModal?.classList.remove('open');
        document.body.style.overflow = '';
      }

      faqTrigger?.addEventListener('click', openFaqModal);
      faqClose?.addEventListener('click', closeFaqModal);

      faqModal?.addEventListener('click', (e) => {
        if (e.target === faqModal) {
          closeFaqModal();
        }
      });

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && faqModal?.classList.contains('open')) {
          closeFaqModal();
        }
      });

      const faqQuestions = document.querySelectorAll('.faq-question');
      
      faqQuestions.forEach(question => {
        question.addEventListener('click', () => {
          const item = question.parentElement;
          const isActive = item.classList.contains('active');
          
          document.querySelectorAll('.faq-item').forEach(i => {
            i.classList.remove('active');
            const icon = i.querySelector('.faq-icon');
            if(icon) icon.style.transform = 'rotate(0deg)';
          });

          if (!isActive) {
            item.classList.add('active');
            const icon = item.querySelector('.faq-icon');
            if(icon) icon.style.transform = 'rotate(180deg)';
          }
        });
      });

      const carouselItems = document.querySelectorAll('.discipline-item');
      let currentCarouselIndex = 0;

      function updateCarousel() {
        const isMobile = window.innerWidth <= 768;
        
        // En móvil: mostrar todos los items (sin carrusel)
        // En desktop: comportamiento normal
        carouselItems.forEach(item => {
          item.style.display = '';
          item.classList.remove('active-slide');
        });
        
        document.querySelectorAll('.discipline-detail').forEach(detail => {
          if (!detail.classList.contains('active')) {
            detail.style.display = isMobile ? 'none' : '';
          }
        });
      }

      window.addEventListener('resize', updateCarousel);
      setTimeout(updateCarousel, 100);

      // Mobile Accordion functionality
      document.querySelectorAll('.mobile-accordion-trigger').forEach(trigger => {
        trigger.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          
          const disciplineItem = this.closest('.discipline-item');
          const accordionContent = disciplineItem.querySelector('.mobile-accordion-content');
          const buttonText = this.querySelector('span');
          const viewMoreText = this.dataset.viewMore;
          const viewLessText = this.dataset.viewLess;
          
          const isOpen = accordionContent.classList.contains('open');
          
          // Close all other accordions
          document.querySelectorAll('.mobile-accordion-content').forEach(content => {
            if (content !== accordionContent) {
              content.classList.remove('open');
            }
          });
          document.querySelectorAll('.mobile-accordion-trigger').forEach(btn => {
            if (btn !== this) {
              btn.classList.remove('active');
              const otherText = btn.querySelector('span');
              otherText.textContent = btn.dataset.viewMore;
            }
          });
          
          // Toggle current accordion
          if (isOpen) {
            accordionContent.classList.remove('open');
            this.classList.remove('active');
            buttonText.textContent = viewMoreText;
          } else {
            accordionContent.classList.add('open');
            this.classList.add('active');
            buttonText.textContent = viewLessText;
          }
        });
      });
