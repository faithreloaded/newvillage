---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 | P치gina no encontrada" description="La p치gina que buscas no existe">
  <div class="error-page">
    <div class="container">
      <div class="error-content">
        <h1 class="error-title">404</h1>
        <h2 class="error-subtitle">P치gina no encontrada</h2>
        <p class="error-description">
          La p치gina que buscas no existe o ha sido movida.
        </p>
        <div class="error-actions">
          <a href="/" class="btn btn-primary">Volver al inicio</a>
          <a href="/es/blog" class="btn btn-secondary">Ver blog</a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .error-page {
    padding: 4rem 0;
    min-height: 60vh;
    display: flex;
    align-items: center;
  }


  .error-content {
    text-align: center;
  }

  .error-title {
    font-size: 4rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1;
    opacity: 0.6;
  }

  .error-subtitle {
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--color-text);
    margin: 1rem 0;
  }

  .error-description {
    font-size: 1rem;
    color: var(--color-text-secondary);
    margin: 0 0 2rem 0;
    line-height: 1.6;
    opacity: 0.8;
  }

  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Los estilos de botones se heredan de buttons.css */

  @media (max-width: 768px) {
    .error-title {
      font-size: 3rem;
    }

    .error-subtitle {
      font-size: 1.25rem;
    }

    .error-actions {
      flex-direction: column;
      align-items: center;
    }
  }
</style>


